@model ShoppingSystem.Models.Order

@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>SuperMarkets</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Id" class="control-label"></label>
				<input asp-for="Id" class="form-control" value="@Model.Id" readonly />
				<span asp-validation-for="Id" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CustomerId" class="control-label"></label>
				<input asp-for="CustomerId" class="form-control" value="@Model.CustomerId" />
				<span asp-validation-for="CustomerId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="SupermarketId" class="control-label"></label>
				<input asp-for="SupermarketId" class="form-control" value="@Model.SupermarketId" />
				<span asp-validation-for="SupermarketId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="OrderDate" class="control-label"></label>
				<input asp-for="OrderDate" class="form-control" value="@Model.OrderDate" />
				<span asp-validation-for="OrderDate" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>


<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
