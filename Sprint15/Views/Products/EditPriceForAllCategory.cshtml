@model ProductsValidation.Models.Product

@{
    ViewData["Title"] = "Reports";
}

<h2>Report:</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <h4>Edit price for category products</h4>
        <form asp-action="EditPriceForAllCategory">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" asp-items="@new SelectList(Enum.GetNames(typeof(Product.Category)))" class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Select a category" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
